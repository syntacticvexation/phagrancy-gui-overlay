source 'https://rubygems.org'

gem 'bundler'

# server and framework
gem 'puma'
gem 'sinatra', require: 'sinatra/base'
gem 'sinatra-asset-pipeline', '0.7.0', require: 'sinatra/asset_pipeline'

# js runtime
gem 'therubyracer'

# asset handling
gem 'coffee-script'
gem 'sassc'
gem 'uglifier'
gem 'slim'

# js assets
source 'https://rails-assets.org' do
  gem 'rails-assets-bootswatch-dist', '3.3.4.superhero'
  gem 'rails-assets-jstree'
  gem 'rails-assets-jstree-bootstrap-theme'
end
